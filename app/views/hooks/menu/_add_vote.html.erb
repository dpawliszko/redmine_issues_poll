<% if User.current.can_bet?(@issue.project_id) && @issue.can_receive_bet? %>
  <%= link_to t(:button_bet),
    url_for(:controller => 'polls', :action => 'bet', :issue_id => @issue.id, :project_id => @issue.project_id),
    :method => :post,
    :remote => true,
    class: "icon icon-redmin-issues-poll-up" %>
<% end %>
